<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Edit Achievement</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
<div class="container-fluid">
<a class="navbar-brand" href="/">Interest Group</a>
<ul class="navbar-nav">
    <li class="nav-item">
        <a class="nav-link" href="/gallery">Gallery</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/gallery/request">Request Upload</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/gallery/upload">Upload Media</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/gallery/manage">Manage Media</a>
    </li>
</ul>
</div>
</nav>

<div class="container mt-4">
    <h1>Search Results for "<%= searchQuery %>"</h1>

    <% if (messages.error) { %>
        <div class="alert alert-danger"><%= messages.error %></div>
    <% } %>
    <% if (messages.success) { %>
        <div class="alert alert-success"><%= messages.success %></div>
    <% } %>

    <% if (results.length === 0) { %>
        <div class="alert alert-info">No gallery items found.</div>
    <% } else { %>
        <div class="row">
            <% results.forEach(item => { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <% if (item.media_url.endsWith('.mp4') || item.media_url.endsWith('.mov')) { %>
                            <video controls class="card-img-top">
                                <source src="<%= item.media_url %>">
                            </video>
                        <% } else { %>
                            <img src="<%= item.media_url %>" class="card-img-top" alt="Media">
                        <% } %>
                        <div class="card-body">
                            <h5><%= item.caption %></h5>
                            <p class="text-muted"><%= item.ig_name %> â€¢ <%= new Date(item.upload_date).toLocaleDateString() %></p>
                            <a href="/gallery" class="btn btn-sm btn-outline-secondary">Back to Gallery</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } %>
</div>
</body>
</html>
