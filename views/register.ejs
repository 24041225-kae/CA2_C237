</html>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>IGConnect | Register</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet"/>
  <style>
    body {
      margin: 0;
      font-family: 'Segoe UI', sans-serif;
      min-height: 100vh;
    }

    .left-panel {
      background-color: #ffffff;
      padding: 50px 30px;
    }

    .form-control, .form-select {
      border-radius: 10px;
    }

    .btn-primary {
      background-color: #ff9800;
      border: none;
      border-radius: 10px;
      font-weight: 600;
    }

    .btn-primary:hover {
      background-color: #fb8c00;
    }

    .btn-outline-dark {
      border-radius: 10px;
    }

    .form-icon {
      position: absolute;
      left: 15px;
      top: 50%;
      transform: translateY(-50%);
      color: #aaa;
    }
.form-control.ps-5 {
  padding-left: 2.5rem !important; /* avoid text overlap with icon */
}

#password-requirements li {
  margin-bottom: 2px;
}


    .form-group {
      position: relative;
    }

    .form-group input {
      padding-left: 40px;
    }

    .eye-icon {
      position: absolute;
      right: 15px;
      top: 50%;
      transform: translateY(-50%);
      cursor: pointer;
    }

    .right-panel img {
      max-height: 90vh;
      object-fit: cover;
      width: 100%;
    }

    @media (max-width: 768px) {
      .right-panel img {
        max-height: 250px;
      }
    }
  </style>
</head>
<body>
<div class="container-fluid">
  <div class="row flex-column flex-lg-row min-vh-100">
    <!-- Left: Register Form -->
    <div class="col-lg-6 d-flex flex-column justify-content-center left-panel">
      <div class="w-100" style="max-width: 450px; margin: 0 auto;">
        <!-- ‚úÖ Logo -->
        <div class="text-center mb-4">
          <img src="public/Images/IGConnect-logo-transparent.png" alt="IGConnect Logo" style="height: 120px;" />
        </div>

        <h1 class="fw-bold mb-2">Create Account</h1>
        <p class="text-muted mb-4">Join IGConnect and start managing your CCA journey today!</p>

        <form action="/register" method="POST">
          <div class="form-group mb-3">
            <i class="fas fa-user form-icon"></i>
            <input type="text" name="username" class="form-control" placeholder="Username" required />
          </div>

          <div class="form-group mb-3">
            <i class="fas fa-envelope form-icon"></i>
            <input type="email" name="email" class="form-control" placeholder="Email" required />
          </div>

       <div class="form-group mb-3">
  <i class="fas fa-lock form-icon"></i>
  <input type="password" name="password" id="password" class="form-control" placeholder="Password" required oninput="validatePassword()" />
  <i class="fas fa-eye eye-icon" onclick="togglePassword()"></i>
</div>
  <!-- Real-time validation checklist -->
  <ul class="list-unstyled mt-2 ms-1" id="password-requirements" style="font-size: 0.9em;">
    <li id="length" class="text-danger">‚ùå At least 8 characters</li>
    <li id="uppercase" class="text-danger">‚ùå One uppercase letter</li>
    <li id="lowercase" class="text-danger">‚ùå One lowercase letter</li>
    <li id="number" class="text-danger">‚ùå One number</li>
    <li id="symbol" class="text-danger">‚ùå One special character (@$!%*?#&)</li>
  </ul>




          <div class="mb-4">
            <select name="roles" class="form-select" required>
              <option value="" disabled selected>Select Role</option>
              <option value="student">Student</option>
              <option value="admin">Admin</option>
            </select>
          </div>

          <button type="submit" class="btn btn-primary w-100">Register</button>
        </form>

        <div class="text-center mt-4">
          <p class="mb-0">Already have an account?</p>
          <a href="/login" class="btn btn-outline-dark mt-2">Back to Login</a>
        </div>
      </div>
    </div>

    <!-- Right: Branding Image -->
    <div class="col-lg-6 right-panel d-flex align-items-center justify-content-center p-0">
      <img src="public/Images/Register.jpg" alt="IGConnect Register Image" />
    </div>
  </div>
</div>

<!-- ‚úÖ Modal: Success -->
<% if (successMsg && successMsg.length > 0) { %>
  <div class="modal fade" id="successModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content border-success shadow">
        <div class="modal-header bg-success text-white">
          <h5 class="modal-title">Success</h5>
        </div>
        <div class="modal-body">
          <%= successMsg[0] %>
        </div>
      </div>
    </div>
  </div>
  <script>


    document.addEventListener("DOMContentLoaded", () => {
      new bootstrap.Modal(document.getElementById("successModal")).show();
    });
  </script>
<% } %>

<!-- ‚ùå Modal: Error -->
<% if (errorMsg && errorMsg.length > 0) { %>
  <div class="modal fade" id="errorModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content border-danger shadow">
        <div class="modal-header bg-danger text-white">
          <h5 class="modal-title">Error</h5>
        </div>
        <div class="modal-body">
          <%= errorMsg[0] %>
        </div>
      </div>
    </div>
  </div>
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      new bootstrap.Modal(document.getElementById("errorModal")).show();
    });
  </script>
<% } %>

<!-- üëÅ Toggle Password -->
<script>
  function togglePassword() {
    const input = document.getElementById('password');
    const icon = event.target;
    if (input.type === "password") {
      input.type = "text";
      icon.classList.remove("fa-eye");
      icon.classList.add("fa-eye-slash");
    } else {
      input.type = "password";
      icon.classList.remove("fa-eye-slash");
      icon.classList.add("fa-eye");
    }
  }
</script>
<script>
  function validatePassword() {
    const password = document.getElementById("password").value;

    const length = document.getElementById("length");
    const uppercase = document.getElementById("uppercase");
    const lowercase = document.getElementById("lowercase");
    const number = document.getElementById("number");
    const symbol = document.getElementById("symbol");

    // Validation checks
    length.innerHTML = password.length >= 8
      ? "‚úÖ At least 8 characters"
      : "‚ùå At least 8 characters";
    length.className = password.length >= 8 ? "text-success" : "text-danger";

    uppercase.innerHTML = /[A-Z]/.test(password)
      ? "‚úÖ One uppercase letter"
      : "‚ùå One uppercase letter";
    uppercase.className = /[A-Z]/.test(password) ? "text-success" : "text-danger";

    lowercase.innerHTML = /[a-z]/.test(password)
      ? "‚úÖ One lowercase letter"
      : "‚ùå One lowercase letter";
    lowercase.className = /[a-z]/.test(password) ? "text-success" : "text-danger";

    number.innerHTML = /\d/.test(password)
      ? "‚úÖ One number"
      : "‚ùå One number";
    number.className = /\d/.test(password) ? "text-success" : "text-danger";

    symbol.innerHTML = /[@$!%*?#&]/.test(password)
      ? "‚úÖ One special character (@$!%*?#&)"
      : "‚ùå One special character (@$!%*?#&)";
    symbol.className = /[@$!%*?#&]/.test(password) ? "text-success" : "text-danger";
  }
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
