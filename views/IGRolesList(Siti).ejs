<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>IG Roles List - IG Connect</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">IG Connect</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/members">Members</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/ig_categories">IG Categories</a>
                    </li>
                    <% if (user && user.role === 'admin') { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/ig_roles">IG Roles</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/addMember">Add New Member</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/addIgRole">Add New IG Role</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/addIgCategory">Add New IG Category</a>
                        </li>
                    <% } %>
                    <li class="nav-item">
                        <span class="nav-link text-white">Welcome, <%= user.username %>! (Role: <%= user.role %>)</span>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <p>Welcome, <%= user.username %> (<%= user.role %>)</p>
        <br>
        <div class="text-center"><h2>IG Roles from IG Connect Database</h2></div>
        <br>

        <% if (messages && messages.length > 0) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= messages %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        <% if (errors && errors.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= errors %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>

        <% if (user && user.role === 'admin') { %>
            <a href="/addIgRole" class="btn btn-primary mb-3">Add New IG Role</a>
        <% } %>

        <h3 class="mt-4">Search IG Roles</h3>
        <form action="/ig_roles" method="GET" class="mb-4">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search by Role Title" name="title" value="<%= typeof req !== 'undefined' && req.query.title ? req.query.title : '' %>">
                <button class="btn btn-primary" type="submit">Search</button>
                <% if (typeof searchPerformed !== 'undefined' && searchPerformed) { %>
                    <a href="/ig_roles" class="btn btn-secondary">Clear Search</a>
                <% } %>
            </div>
        </form>

        <% if (igRoles && igRoles.length > 0) { %>
            <table class="table table-hover small text-center">
                <thead>
                    <tr>
                        <th width="200">Role Title</th>
                        <th width="400">Description</th>
                        <% if (user && user.role === 'admin') { %>
                            <th width="100">Edit</th>
                            <th width="100">Delete</th>
                        <% } %>
                    </tr>
                </thead>
                <tbody>
                    <% igRoles.forEach(function(role) { %>
                        <tr>
                            <td><%= role.title %></td>
                            <td><%= role.description %></td>
                            <% if (user && user.role === 'admin') { %>
                                <td><a href="/updateIgRole/<%= role.id %>" class="btn btn-sm btn-info">Edit</a></td>
                                <td>
                                    <a href="/deleteIgRole/<%= role.id %>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this role? Members assigned to this role must be unassigned first.')">Delete</a>
                                </td>
                            <% } %>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No IG roles found<%= typeof searchPerformed !== 'undefined' && searchPerformed ? ' matching your search criteria.' : '.' %></p>
        <% } %>
    </div>
</body>
</html>