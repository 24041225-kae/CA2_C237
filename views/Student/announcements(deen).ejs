<!DOCTYPE html>
<html>
<head>
  <title>Student Announcements</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="container mt-5">
  <h1>ðŸ“¢ Student Announcements</h1>

  <!-- No announcements -->
  <% if (announcements.length === 0) { %>
    <div class="alert alert-info">No announcements for students at the moment.</div>
  <% } %>

  <% announcements.forEach(a => { %>
    <% if (a.target_audience === 'student') { %>
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title"><%= a.title %></h5>
          <p class="card-text"><%= a.message %></p>
          <small class="text-muted">Posted on: <%= new Date(a.created_at).toLocaleString() %></small>
        </div>
      </div>
    <% } %>
  <% }) %>
</body>
</html>