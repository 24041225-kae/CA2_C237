<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Add New Event | IGConnect Admin</title>

  <!-- Bootstrap & FontAwesome -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>

  <!-- Custom Styles -->
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background: url('/Images/AddIG.jpg') no-repeat center center fixed;
      background-size: cover;
      position: relative;
      margin: 0;
      padding: 0;
    }

    .background-overlay {
      position: fixed;
      top: 0; left: 0;
      width: 100%; height: 100%;
      background-color: rgba(0, 0, 0, 0.65);
      z-index: 0;
    }

    .content-wrapper {
      position: relative;
      z-index: 1;
    }

    .form-container {
      max-width: 720px;
      margin: auto;
      background-color: rgba(255, 255, 255, 0.95);
      border-radius: 18px;
      padding: 40px 30px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    }

    .heading-title {
      color: #ffffff;
      text-shadow: 1px 1px 8px rgba(0, 0, 0, 0.8);
    }

    .form-label {
      font-weight: 600;
      color: #333;
    }

    .btn-custom {
      background-color: #0d6efd;
      color: white;
      font-weight: 600;
    }

    .btn-custom:hover {
      background-color: #0a58ca;
    }

    @media (max-width: 768px) {
      .form-container {
        padding: 25px 20px;
      }
    }
  </style>
</head>
<body>

  <!-- Background Overlay -->
  <div class="background-overlay"></div>

  <!-- Navbar -->
  <%- include('../partials/Admin/admin-navbar') %>

  <!-- Main Content -->
  <div class="container my-5 content-wrapper">
    <!-- Page Heading -->
    <div class="text-center mb-4">
      <img src="/Images/Logins.jpg" alt="IGConnect Logo" class="img-fluid mb-3" style="max-height: 80px;" />
      <h1 class="display-5 fw-bold heading-title">Add a New Event</h1>
      <p class="lead text-white">Create and manage upcoming student events</p>
    </div>

    <!-- Form Card -->
    <div class="form-container">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="mb-0 fw-semibold text-dark">ğŸ“‹ Event Details</h4>
        <a href="/admin/events" class="btn btn-outline-secondary">
          <i class="fas fa-arrow-left me-1"></i> Back to List
        </a>
      </div>

      <form action="/admin/events/add" method="POST">
        <div class="mb-3">
          <label for="name" class="form-label">ğŸ‰ Event Name</label>
          <input type="text" class="form-control" id="name" name="name" placeholder="Enter event title" required>
        </div>

        <div class="mb-3">
          <label for="date" class="form-label">ğŸ“… Event Date</label>
          <input type="date" class="form-control" id="date" name="date" required>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">ğŸ“ Location</label>
          <input type="text" class="form-control" id="location" name="location" placeholder="Enter venue or platform" required>
        </div>

        <div class="mb-3">
          <label for="ig_id" class="form-label">ğŸ‘¥ Organized By</label>
          <select class="form-select" id="ig_id" name="ig_id" required>
            <option value="">-- Select Interest Group --</option>
            <% igList.forEach(ig => { %>
              <option value="<%= ig.id %>"><%= ig.igName %></option>
            <% }) %>
          </select>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">ğŸ“ Event Description</label>
          <textarea class="form-control" id="description" name="description" rows="4" placeholder="Describe the event in detail..." required></textarea>
        </div>

        <button type="submit" class="btn btn-custom w-100">
          <i class="fas fa-calendar-plus me-1"></i> Add Event
        </button>
      </form>
    </div>
  </div>

  <%- include('../partials/Admin/admin-footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
