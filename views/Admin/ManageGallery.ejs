<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Manage Gallery | IGConnect Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>
  <style>
    body {
      background-color: #f4f7fa;
      font-family: 'Segoe UI', sans-serif;
    }
    .header {
      background: linear-gradient(to right, #f39c12, #f1c40f);
      color: white;
      padding: 60px 20px;
      text-align: center;
    }
    .header h1 { font-size: 2.5rem; font-weight: 700; }
    .gallery-img { height: 80px; width: 80px; object-fit: cover; border-radius: 5px; border: 1px solid #ddd; }
    .btn-action { margin: 0 2px; }
    .table thead { background-color: #f39c12; color: white; }
    .btn-warning { background-color: #f39c12; border: none; }
    .btn-warning:hover { background-color: #e69500; }
    .top-bar { display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem; }
    .comment-box { font-size: 0.95rem; margin-top: 5px; }
  </style>
</head>
<body>
<%- include('partials/Admin/admin-navbar') %>
<header class="header">
  <h1>Manage Gallery</h1>
  <p>View, comment, and delete submitted gallery images.</p>
</header>

<div class="container py-4">

  <div class="top-bar">
    <h4 class="fw-bold">Gallery Submissions</h4>
    <a href="/admin/gallery/add" class="btn btn-warning">
      <i class="fas fa-plus me-1"></i> Add New Gallery
    </a>
  </div>

  <% if (message && message.length > 0) { %>
    <div class="alert alert-warning"><%= message %></div>
  <% } %>

  <% if (successMsg && successMsg.length > 0) { %>
    <div class="alert alert-success"><%= successMsg %></div>
  <% } %>

  <div class="gallery-box">
    <table class="table table-hover align-middle">
      <thead>
        <tr>
          <th>#</th>
          <th>Media</th>
          <th>Title</th>
          <th>Uploader</th>
          <th>IG</th>
          <th>Uploaded At</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (!galleryList || galleryList.length === 0) { %>
          <tr><td colspan="7" class="text-center text-muted">No gallery entries found.</td></tr>
        <% } else { %>
          <% galleryList.forEach((g, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td>
                <% if (g.media_url.endsWith('.mp4')) { %>
                  <video src="<%= g.media_url %>" class="gallery-img" controls></video>
                <% } else { %>
                  <img src="<%= g.media_url %>" class="gallery-img" alt="Gallery Media"/>
                <% } %>
              </td>
              <td><%= g.title %></td>
              <td><%= g.student_name %></td>
              <td><%= g.ig_name %></td>
              <td><%= new Date(g.upload_date || g.created_at).toLocaleDateString('en-SG') %></td>
              <td>
                <a href="/admin/gallery/edit/<%= g.id %>" class="btn btn-sm btn-primary btn-action"><i class="fas fa-edit"></i></a>
                <form action="/admin/gallery/delete/<%= g.id %>" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-sm btn-danger btn-action" onclick="return confirm('Are you sure?');"><i class="fas fa-trash"></i></button>
                </form>
              </td>
            </tr>
            <tr>
              <td colspan="7">
                <!-- Load Comments -->
                <div class="comment-box" id="comments-<%= g.id %>">
                  <button class="btn btn-sm btn-outline-secondary mb-2" onclick="loadComments('<%= g.id %>')">Load Comments</button>
                  <div class="comments-container"></div>

                  <!-- Add Comment -->
                  <form onsubmit="postComment(event, '<%= g.id %>')">
                    <textarea class="form-control mb-2" name="comment" placeholder="Add a comment..." required></textarea>
                    <button class="btn btn-sm btn-primary">Post</button>
                  </form>
                </div>
              </td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<script>
function loadComments(id) {
  fetch(`/gallery/${id}/comments`)
    .then(res => res.json())
    .then(data => {
      const box = document.querySelector(`#comments-${id} .comments-container`);
      box.innerHTML = data.length ? data.map(c => `
        <div><strong>${c.student_name}</strong><br>${c.comment}<br><small>${new Date(c.created_at).toLocaleString()}</small><hr></div>
      `).join('') : '<p class="text-muted">No comments yet.</p>';
    });
}

function postComment(event, id) {
  event.preventDefault();
  const form = event.target;
  const data = new URLSearchParams(new FormData(form));
  fetch(`/gallery/${id}/comment`, {
    method: 'POST',
    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
    body: data
  }).then(res => {
    if (res.ok) {
      form.reset();
      loadComments(id);
    } else {
      alert('Failed to post comment');
    }
  });
}
</script>
<%- include('partials/Admin/admin-footer') %>
</body>
</html>
