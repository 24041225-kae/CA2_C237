<!DOCTYPE html>
<html>
<head>
  <title>Manage IG Members</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <% if (success && success.length > 0) { %>
  <div class="alert alert-success"><%= success %></div>
<% } %>
<% if (error && error.length > 0) { %>
  <div class="alert alert-danger"><%= error %></div>
<% } %>

  <div class="container mt-5">
    <h2 class="mb-4">Interest Group Members</h2>

    <% if (members.length === 0) { %>
      <p>No students are currently in this IG.</p>
    <% } else { %>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Username</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% members.forEach(member => { %>
            <tr>
              <td><%= member.fullname %></td>
              <td><%= member.email %></td>
              <td><%= member.username %></td>
              <td>
                <form action="/admin/ig/<%= igId %>/members/delete/<%= member.member_id %>" method="POST" onsubmit="return confirm('Are you sure you want to remove this student?');">
                  <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>

    <a href="/admin/manage-igs" class="btn btn-secondary mt-3">Back to IG List</a>
  </div>
</body>
</html>
