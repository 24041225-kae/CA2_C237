<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Manage IG Members</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: #f0f4f8;
      font-family: 'Segoe UI', sans-serif;
    }

    .header {
      background: linear-gradient(to right, #004085, #007bff);
      color: white;
      padding: 30px 0;
      text-align: center;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .header h2 {
      font-size: 2rem;
      font-weight: 600;
    }

    .table-card {
      background: white;
      border-radius: 10px;
      padding: 30px;
      box-shadow: 0 4px 16px rgba(0,0,0,0.08);
    }

    table th {
      background-color: #0d6efd;
      color: white;
    }

    tr:hover {
      background-color: #f5f9ff;
    }

    .btn-danger:hover {
      background-color: #c82333;
    }

    .back-btn {
      margin-top: 25px;
    }

    #searchInput {
      width: 100%;
      max-width: 400px;
      margin-bottom: 20px;
    }

    .no-results {
      text-align: center;
      color: #999;
      font-style: italic;
      margin-top: 20px;
    }
  </style>
</head>
<body>
    <%- include("../../partials/Admin/Navbar") %>

  <div class="header">
    <h2>Manage All IG Members</h2>
  </div>

  <div class="container mt-5">

    <% if (success && success.length > 0) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } %>
    <% if (error && error.length > 0) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } %>

    <div class="table-card">
      <% if (members.length === 0) { %>
        <div class="alert alert-info text-center mb-0">No students are currently in any IG.</div>
      <% } else { %>

        <!-- üîç Search Input -->
        <div class="d-flex justify-content-end mb-3">
          <input type="text" id="searchInput" class="form-control" placeholder="Search by IG, name, email or username...">
        </div>

        <div class="table-responsive">
          <table id="membersTable" class="table table-bordered align-middle mb-0">
            <thead>
              <tr>
                <th>IG Name</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Username</th>
                <th class="text-center">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% members.forEach(member => { %>
                <tr>
                  <td><%= member.ig_name %></td>
                  <td><%= member.student_name %></td>
                  <td><%= member.email %></td>
                  <td><%= member.username %></td>
                  <td class="text-center">
<form action="/admin/ig/<%= member.ig_id %>/members/delete/<%= member.member_id %>" method="POST">
                      <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>

        <!-- üö´ No Results Message -->
        <p id="noResults" class="no-results d-none">No matching members found.</p>

      <% } %>
    </div>

    <div class="text-center back-btn">
      <a href="/admin/manage-igs" class="btn btn-secondary">‚Üê Back to IG List</a>
    </div>

  </div>

  <script>
    const searchInput = document.getElementById('searchInput');
    const rows = document.querySelectorAll('#membersTable tbody tr');
    const noResults = document.getElementById('noResults');

    searchInput.addEventListener('keyup', () => {
      const filter = searchInput.value.toLowerCase();
      let visibleCount = 0;

      rows.forEach(row => {
        const text = row.innerText.toLowerCase();
        if (text.includes(filter)) {
          row.style.display = '';
          visibleCount++;
        } else {
          row.style.display = 'none';
        }
      });

      noResults.classList.toggle('d-none', visibleCount > 0);
    });
  </script>
    <%- include("../../partials/Admin/Footer") %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
