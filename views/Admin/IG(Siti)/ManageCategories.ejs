<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Manage Categories | IGConnect Admin</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

  <style>
    /* Base Style */
    body {
      background-color: #f4f7fc;
      font-family: 'Roboto', sans-serif;
      margin: 0;
    }

    /* Header Style */
    .page-title {
      background: linear-gradient(to right, #1e3c72, #2a5298);
      color: white;
      font-weight: bold;
      padding: 60px 0;
      text-align: center;
      position: relative;
    }

    .page-title h1 {
      font-size: 3rem;
      font-weight: 700;
    }

    .page-title p {
      font-size: 1.2rem;
      opacity: 0.8;
    }

    /* Card Style */
    .card {
      border-radius: 12px;
      box-shadow: 0 4px 18px rgba(0, 0, 0, 0.05);
      margin-top: 20px;
      padding: 30px;
      background-color: #fff;
    }

    .card-header {
      background-color: #fff;
      font-size: 1.2rem;
      font-weight: 600;
      color: #333;
      border-bottom: 1px solid #f0f0f0;
    }

    .card-body {
      background-color: #fff;
    }

    /* Button Styles */
    .btn {
      transition: all 0.3s ease;
    }

    .btn:hover {
      transform: scale(1.05);
    }

    .btn-warning {
      background-color: #ff9800;
      border-color: #ff9800;
    }

    .btn-warning:hover {
      background-color: #ff5722;
      border-color: #ff5722;
    }

    .btn-danger {
      background-color: #e53935;
      border-color: #e53935;
    }

    .btn-danger:hover {
      background-color: #c62828;
      border-color: #c62828;
    }

    .btn-primary {
      background-color: #007bff;
      border-color: #007bff;
    }

    .btn-primary:hover {
      background-color: #0056b3;
      border-color: #0056b3;
    }

    /* Modal Custom Styles */
    .modal-content {
      border-radius: 12px;
    }

    .modal-header {
      font-weight: 600;
    }

    /* No Items Found */
    .no-items {
      font-size: 1.5rem;
      color: #555;
      text-align: center;
      margin-top: 30px;
    }

    /* Responsive Card Grid */
    .category-grid {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
    }

    .category-card {
      flex: 1 1 calc(25% - 20px);
      margin-bottom: 20px;
    }

    @media (max-width: 768px) {
      .category-card {
        flex: 1 1 calc(50% - 20px);
      }
    }

    @media (max-width: 576px) {
      .category-card {
        flex: 1 1 calc(100% - 20px);
      }
    }
  </style>
</head>
<body>

<%- include("../../partials/Admin/navbar") %>

<section class="page-title pt-5 pb-5">
  <div class="header-overlay">
    <h1>Manage Categories</h1>
    <p>View, edit, and delete student Interest Group categories.</p>
  </div>
</section>

<div class="container mt-5">
  <!-- Category Add Form -->
  <div class="card mb-5">
    <div class="card-header">
      <h5>Add New Category</h5>
    </div>
    <div class="card-body">
      <form action="/admin/manage-categories/add" method="POST">
        <div class="mb-3">
          <label for="category_name" class="form-label">Category Name</label>
          <input type="text" name="category_name" id="category_name" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-warning">Add Category</button>
      </form>
    </div>
  </div>

  <!-- Success/Error Flash Messages -->
  <% if (successMsg && successMsg.length > 0) { %>
    <div class="alert alert-success">
      <%= successMsg[0] %>  <!-- Display success message -->
    </div>
  <% } %>

  <% if (errorMsg && errorMsg.length > 0) { %>
    <div class="alert alert-danger">
      <%= errorMsg[0] %>  <!-- Display error message -->
    </div>
  <% } %>

  <!-- Existing Categories -->
  <div class="card">
    <div class="card-header">
      <h5>Existing Categories</h5>
    </div>
    <div class="card-body">
      <div class="category-grid">
        <% categories.forEach(category => { %>
          <div class="category-card card">
            <div class="card-header">
              <h5><%= category.name %></h5>
            </div>
            <div class="card-body">
              <!-- Trigger Delete Modal -->
              <button class="btn btn-sm btn-danger mb-2" data-bs-toggle="modal" data-bs-target="#deleteModal<%= category.id %>">
                <i class="fas fa-trash"></i> Delete
              </button>
              <a href="/admin/manage-categories/edit/<%= category.id %>" class="btn btn-sm btn-primary mb-2">
                <i class="fas fa-edit"></i> Edit
              </a>
            </div>
          </div>

          <!-- Delete Confirmation Modal -->
          <div class="modal fade" id="deleteModal<%= category.id %>" tabindex="-1" aria-labelledby="deleteModalLabel<%= category.id %>" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content border-danger">
                <div class="modal-header bg-danger text-white">
                  <h5 class="modal-title" id="deleteModalLabel<%= category.id %>">Confirm Deletion</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  Are you sure you want to delete the category "<%= category.name %>"?
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                  <form action="/admin/manage-categories/delete/<%= category.id %>" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>
</div>

<!-- Success/Error Modals -->
<% if (successMsg && successMsg.length > 0) { %>
  <!-- Success Modal -->
  <div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content border-success">
        <div class="modal-header bg-success text-white">
          <h5 class="modal-title" id="successModalLabel">Success</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <%= successMsg[0] %>
        </div>
      </div>
    </div>
  </div>
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      new bootstrap.Modal(document.getElementById("successModal")).show();
    });
  </script>
<% } %>

<% if (errorMsg && errorMsg.length > 0) { %>
  <!-- Error Modal -->
  <div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content border-danger">
        <div class="modal-header bg-danger text-white">
          <h5 class="modal-title" id="errorModalLabel">Error</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <%= errorMsg[0] %>
        </div>
      </div>
    </div>
  </div>
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      new bootstrap.Modal(document.getElementById("errorModal")).show();
    });
  </script>
<% } %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<%- include("../../partials/Admin/footer") %>

</body>
</html>
