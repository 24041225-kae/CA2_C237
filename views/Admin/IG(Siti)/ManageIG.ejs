<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Manage IGs | IGConnect Admin</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

  <style>
  .page-title {
    background: linear-gradient(to right, #ffa726, #fb8c00);
    color: white;
    padding: 80px 0 50px;
    text-align: center;
    border-bottom-left-radius: 40px;
    border-bottom-right-radius: 40px;
    box-shadow: 0 8px 16px rgba(0,0,0,0.05);
    position: relative;
  }

  .page-title h1 {
    font-weight: 700;
    font-size: 3rem;
    margin-bottom: 20px;
  }

  .page-title p {
    font-size: 1.2rem;
    opacity: 0.95;
  }

  .header-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.4);
    display: flex;
    justify-content: center;
    align-items: center;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .page-title h1 { font-size: 2.5rem; }
    .page-title p { font-size: 1.1rem; }
  }

  @media (max-width: 576px) {
    .page-title h1 {
      font-size: 1.8rem;
    }
    .page-title p {
      font-size: 1rem;
    }
  }
</style>
</head>
<body>

<%- include("../../partials/Admin/navbar") %>

<!-- Header Section with Overlay -->
<section class="page-title">
  <div class="header-overlay">
    <h1>Manage Interest Groups</h1>
    <p>View, edit, and organize student Interest Groups.</p>
  </div>
</section>

<!-- Main Card Container -->
<div class="container">
  <div class="ig-card">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h4 class="fw-bold mb-0">All Interest Groups</h4>
      <a href="/admin/interest-groups/add" class="btn btn-warning shadow-sm">
        <i class="fas fa-plus me-1"></i> Add New IG
      </a>
    </div>

    <!-- Flash Messages -->
    <% if (message && message.length > 0) { %>
      <div class="alert alert-warning"><%= message %></div>
    <% } %>
    <% if (successMsg && successMsg.length > 0) { %>
      <div class="alert alert-success"><%= successMsg %></div>
    <% } %>

    <% if (igList.length === 0) { %>
      <div class="text-center mt-5">
        <img src="/Images/NotFound.jpg" width="200" class="mb-3 not-found-img" alt="Not Found">
        <p class="text-muted">No Interest Groups found.</p>
      </div>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-hover ig-table align-middle">
          <thead>
            <tr>
              <th>#</th>
              <th>IG Name</th>
              <th>Category</th>
              <th>Advisor</th>
              <th>Members</th>
              <th class="text-center">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% igList.forEach((ig, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= ig.ig_name %></td>
                <td><%= ig.category %></td>
                <td><%= ig.advisor_name %></td>
                <td><%= ig.member_count %></td>
                <td class="text-center">
                  <a href="/admin/interest-groups/edit/<%= ig.id %>" class="btn btn-sm btn-primary btn-action shadow-sm">
                    <i class="fas fa-edit"></i>
                  </a>
                  <form action="/admin/interest-groups/delete/<%= ig.id %>" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-danger btn-action shadow-sm" onclick="return confirm('Are you sure you want to delete this IG?');">
                      <i class="fas fa-trash"></i>
                    </button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>
</div>

<!-- Flash Message Modals -->
<% if (successMsg && successMsg.length > 0) { %>
  <div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content border-success">
        <div class="modal-header bg-success text-white">
          <h5 class="modal-title" id="successModalLabel">Success</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <%= successMsg[0] %>
        </div>
      </div>
    </div>
  </div>
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      new bootstrap.Modal(document.getElementById("successModal")).show();
    });
  </script>
<% } %>

<% if (errorMsg && errorMsg.length > 0) { %>
  <div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content border-danger">
        <div class="modal-header bg-danger text-white">
          <h5 class="modal-title" id="errorModalLabel">Error</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <%= errorMsg[0] %>
        </div>
      </div>
    </div>
  </div>
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      new bootstrap.Modal(document.getElementById("errorModal")).show();
    });
  </script>
<% } %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<%- include("../../partials/Admin/footer") %>

</body>
</html>
