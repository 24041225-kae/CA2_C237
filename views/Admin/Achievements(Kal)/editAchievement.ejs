<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Edit Achievement</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #f4f7fa;
    }

    .page-header {
      background: linear-gradient(to right, rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.7)),
        url('/Images/AddIG.jpg') no-repeat center center;
      background-size: cover;
      color: white;
      padding: 60px 20px;
      text-align: center;
    }

    .page-header h1 {
      font-size: 2.5rem;
      font-weight: 700;
    }

    .form-container {
      background-color: #fff;
      padding: 40px;
      border-radius: 12px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .form-label {
      font-weight: 600;
    }

    .form-control {
      background-color: #f8f9fa;
    }

    .btn-action {
      margin-right: 10px;
    }
  </style>
</head>
<body>

  <%- include("../../partials/Admin/Navbar") %>

  <!-- Page Header -->
  <div class="page-header">
    <h1>Edit Achievement</h1>
    <p>Update the achievement details for a student.</p>
  </div>

  <!-- Form Section -->
  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="form-container">
          <form action="/admin/achievements/edit/<%= achievement.id %>" method="POST">
            <div class="mb-3">
              <label for="student_id" class="form-label">Student</label>
              <select name="student_id" id="student_id" class="form-select" required>
                <% students.forEach(student => { %>
                  <option value="<%= student.id %>" <%= student.id === achievement.student_id ? 'selected' : '' %>>
                    <%= student.name %>
                  </option>
                <% }) %>
              </select>
            </div>

            <div class="mb-3">
              <label for="title" class="form-label">Title</label>
              <input type="text" id="title" name="title" value="<%= achievement.title %>" class="form-control" required>
            </div>

            <div class="mb-3">
              <label for="description" class="form-label">Description</label>
              <textarea id="description" name="description" class="form-control" rows="4" required><%= achievement.description %></textarea>
            </div>

            <div class="mb-3">
              <label for="date_awarded" class="form-label">Date Awarded</label>
              <input type="date" id="date_awarded" name="date_awarded" value="<%= achievement.date_awarded.toISOString().split('T')[0] %>" class="form-control" required>
            </div>

            <div class="d-flex justify-content-between">
              <button type="submit" class="btn btn-primary btn-action">Update Achievement</button>
              <a href="/admin/achievements" class="btn btn-secondary">Cancel</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <%- include("../../partials/Admin/Footer") %>

  <!-- Bootstrap Bundle JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" defer></script>
</body>
</html>
