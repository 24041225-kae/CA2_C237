<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Achievement | IGConnect Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
</head>
<body>
<%- include("../../partials/Admin/Navbar") %>

<div class="container mt-5">
  <h2 class="mb-4">Add Achievement</h2>
  <form action="/admin/achievements/add" method="POST">
    <div class="mb-3">
      <label for="student_id" class="form-label">Student</label>
      <select class="form-select" name="student_id" required>
        <% students.forEach(student => { %>
          <option value="<%= student.id %>"><%= student.name %></option>
        <% }) %>
      </select>
    </div>

    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input type="text" class="form-control" id="title" name="title" required>
    </div>

    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea class="form-control" id="description" name="description" rows="4" required></textarea>
    </div>

    <div class="mb-3">
      <label for="date_awarded" class="form-label">Date Awarded</label>
      <input type="date" class="form-control" id="date_awarded" name="date_awarded" required>
    </div>

    <button type="submit" class="btn btn-primary">Save Achievement</button>
  </form>
</div>

<%- include("../../partials/Admin/Footer") %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" defer></script>

</body>
</html>
