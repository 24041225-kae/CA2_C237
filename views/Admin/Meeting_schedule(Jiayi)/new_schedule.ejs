<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create New Schedule | IGConnect Admin</title>

  <!-- Bootstrap & FontAwesome -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

  <style>
    /* Base Style */
    body {
      background-color: #f4f7fc;
      font-family: 'Roboto', sans-serif;
      margin: 0;
    }

    /* Header Style */
    .page-title {
      background: linear-gradient(to right, #1e3c72, #2a5298);
      color: white;
      font-weight: bold;
      padding: 60px 0;
      text-align: center;
      position: relative;
    }

    .page-title h1 {
      font-size: 3rem;
      font-weight: 700;
    }

    .page-title p {
      font-size: 1.2rem;
      opacity: 0.8;
    }

    /* Card Style */
    .card {
      border-radius: 12px;
      box-shadow: 0 4px 18px rgba(0, 0, 0, 0.05);
      margin-top: 20px;
      padding: 30px;
      background-color: #fff;
    }

    .card-header {
      background-color: #fff;
      font-size: 1.2rem;
      font-weight: 600;
      color: #333;
      border-bottom: 1px solid #f0f0f0;
    }

    .card-body {
      background-color: #fff;
    }

    /* Button Styles */
    .btn {
      transition: all 0.3s ease;
    }

    .btn:hover {
      transform: scale(1.05);
    }

    .btn-warning {
      background-color: #ff9800;
      border-color: #ff9800;
    }

    .btn-warning:hover {
      background-color: #ff5722;
      border-color: #ff5722;
    }

    .btn-primary {
      background-color: #007bff;
      border-color: #007bff;
    }

    .btn-primary:hover {
      background-color: #0056b3;
      border-color: #0056b3;
    }

    /* Modal Custom Styles */
    .modal-content {
      border-radius: 12px;
    }

    .modal-header {
      font-weight: 600;
    }

    /* No Items Found */
    .no-items {
      font-size: 1.5rem;
      color: #555;
      text-align: center;
      margin-top: 30px;
    }

    /* Responsive Form Layout */
    .form-container {
      max-width: 600px;
      margin: 40px auto;
    }

    .form-card {
      background: white;
      border-radius: 12px;
      padding: 30px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
    }

    .form-card label {
      font-weight: 500;
    }
  </style>
</head>
<body>

<%- include("../../partials/Admin/Navbar") %>

<section class="page-title pt-5 pb-5">
  <div class="header-overlay">
    <h1>âž• Create New IG Schedule</h1>
    <p>Set the schedule for your student Interest Group.</p>
  </div>
</section>

<div class="container mt-5">
  <!-- Schedule Add Form -->
  <div class="card mb-5">
    <div class="card-header">
      <h5>Add New Schedule</h5>
    </div>
    <div class="card-body">
      <form action="/admin/schedule/new" method="POST">
<!-- IG Category Dropdown -->
<div class="mb-3">
  <label for="category_id" class="form-label"><i class="fas fa-list me-1"></i> IG Category</label>
  <select class="form-control" id="category_id" name="category_id" required>
    <option value="">Select Category</option>
    <% categories.forEach((category) => { %>
      <option value="<%= category.id %>"><%= category.name %></option>
    <% }) %>
  </select>
</div>

<!-- IG Name Dropdown -->
<div class="mb-3">
  <label for="name" class="form-label"><i class="fas fa-users me-1"></i> IG Name</label>
  <select class="form-control" id="name" name="name" required>
    <option>Select IG</option>
    <% igs.forEach((ig) => { %>
      <option value="<%= ig.id %>"><%= ig.name %></option>
    <% }) %>
  </select>
</div>



        <div class="mb-3">
          <label for="meeting_schedule" class="form-label"><i class="fas fa-clock me-1"></i>Meeting Schedule</label>
          <input type="datetime-local" class="form-control" id="meeting_schedule" name="meeting_schedule" required />
        </div>

        <div class="mb-3">
          <label for="advisor" class="form-label"><i class="fas fa-user-tie me-1"></i>Advisor</label>
          <input type="text" class="form-control" id="advisor" name="advisor" required />
        </div>

        <button type="submit" class="btn btn-primary w-100">
          <i class="fas fa-paper-plane me-1"></i> Create
        </button>
      </form>
    </div>
  </div>

  <!-- Success/Error Flash Messages -->
  <% if (errors && errors.length > 0) { %>
    <div class="alert alert-danger"><%= errors[0] %></div>
  <% } %>
  <% if (success && success.length > 0) { %>
    <div class="alert alert-success"><%= success[0] %></div>
  <% } %>

  <!-- Back Link -->
  <a href="/admin/meeting_schedule" class="btn btn-secondary mt-3">
    <i class="fas fa-arrow-left me-1"></i> Back
  </a>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<%- include("../../partials/Admin/footer") %>

</body>
</html>
