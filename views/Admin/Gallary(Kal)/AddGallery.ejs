  <!-- Form Card -->
  <div class="glass-card my-4">
    <form action="/admin/gallery/add" method="POST" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title" class="form-label"><i class="fas fa-heading"></i>Image Title</label>
        <input type="text" class="form-control" name="title" id="title" placeholder="Enter image title" required>
      </div>

      <div class="mb-3">
        <label for="media" class="form-label"><i class="fas fa-file-image"></i>Media File (Image or Video)</label>
        <input type="file" class="form-control" name="media" id="media" required>
      </div>

      <div class="mb-3">
        <label for="student_id" class="form-label"><i class="fas fa-user-graduate"></i>Uploader (Student)</label>
        <select name="student_id" id="student_id" class="form-select" required>
          <option value="">-- Select Student --</option>
          <% students.forEach(s => { %>
            <option value="<%= s.id %>"><%= s.name %></option>
          <% }) %>
        </select>
      </div>

      <div class="mb-3">
        <label for="ig_id" class="form-label"><i class="fas fa-users"></i>Interest Group</label>
        <select name="ig_id" id="ig_id" class="form-select" required>
          <option value="">-- Select IG --</option>
          <% igs.forEach(ig => { %>
            <option value="<%= ig.id %>"><%= ig.name %></option>
          <% }) %>
        </select>
      </div>

      <div class="mb-4">
        <label for="caption" class="form-label"><i class="fas fa-comment-dots"></i>Caption</label>
        <input type="text" class="form-control" name="caption" id="caption" placeholder="Enter caption" required>
      </div>

      <div class="text-center">
        <button type="submit" class="btn btn-custom px-4">
          <i class="fas fa-upload me-1"></i>Upload
        </button>
        <a href="/admin/gallery" class="btn btn-secondary ms-2 px-4">
          <i class="fas fa-arrow-left me-1"></i>Back
        </a>
      </div>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
