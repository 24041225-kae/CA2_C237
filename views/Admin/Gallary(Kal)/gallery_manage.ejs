<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Edit Achievement</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<%- include('partials/Admin/admin-navbar') %>
<div class="container mt-4">
    <h1 class="mb-4">Pending Gallery Uploads</h1>
    
    <% if (messages.success) { %>
        <div class="alert alert-success"><%= messages.success %></div>
    <% } %>
    <% if (messages.error) { %>
        <div class="alert alert-danger"><%= messages.error %></div>
    <% } %>
    
    <% if (pendingUploads.length === 0) { %>
        <div class="alert alert-info">No pending uploads to review.</div>
    <% } else { %>
        <div class="row">
            <% pendingUploads.forEach(item => { %>
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <% if (item.media_url.endsWith('.mp4') || item.media_url.endsWith('.mov')) { %>
                            <video controls class="card-img-top">
                                <source src="<%= item.media_url %>" type="video/mp4">
                            </video>
                        <% } else { %>
                            <img src="<%= item.media_url %>" class="card-img-top" alt="Pending upload">
                        <% } %>
                        <div class="card-body">
                            <h5 class="card-title"><%= item.caption.replace('[PENDING]', '') %></h5>
                            <p class="card-text text-muted">
                                <small>
                                    <%= item.ig_name %> â€¢ 
                                    <%= new Date(item.upload_date).toLocaleDateString() %>
                                </small>
                            </p>
                            
                            <form action="/gallery/approve/<%= item.id %>" method="post" class="mb-3">
                                <div class="form-group">
                                    <label for="caption-<%= item.id %>">Edit Caption:</label>
                                    <input type="text" class="form-control" id="caption-<%= item.id %>" 
                                    name="caption" value="<%= item.caption.replace('[PENDING]', '') %>" required>
                                </div>
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-check"></i> Approve
                                </button>
                            </form>
                            
                            <a href="/gallery/reject/<%= item.id %>" class="btn btn-danger" 
                            onclick="return confirm('Are you sure you want to reject this upload?')">
                                <i class="fas fa-times"></i> Reject
                            </a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } %>
    
    <div class="mt-3">
        <a href="/gallery" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Gallery
        </a>
    </div>
</div>

