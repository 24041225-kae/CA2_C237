<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Manage IG Categories - IGConnect</title>

  <!-- Bootstrap + FontAwesome -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

  <style>
    .form-inline-flex {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
    }

    .table thead th {
      background-color: #f8f9fa;
    }

    .form-control.w-auto {
      min-width: 150px;
    }

    .highlight-header {
      font-weight: bold;
      color: #0d6efd;
    }

    .action-buttons {
      display: flex;
      gap: 6px;
      justify-content: center;
    }

    @media (max-width: 768px) {
      .form-inline-flex {
        flex-direction: column;
      }

      .action-buttons {
        flex-direction: column;
        align-items: center;
      }
    }
  </style>
</head>

<body>
  <!-- Admin Navbar -->
  <%- include('../partials/Admin/admin-navbar') %>

  <div class="container mt-5 mb-5">
    <div class="text-center mb-4">
      <h2 class="highlight-header">Manage IG Categories</h2>
      <p class="text-muted">Add, update, and remove Interest Group categories</p>
    </div>

    <!-- Flash Messages -->
    <% if (messages && messages.length > 0) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= messages %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
    <% if (errors && errors.length > 0) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= errors %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <!-- Add New Category -->
    <form action="/admin/addIgCategory" method="POST" class="mb-4">
       <button class="btn btn-primary" type="submit">
          <i class="fas fa-plus-circle me-1"></i> Add Category
        </button>
    </form>

    <!-- Search Bar -->
    <form action="/ig_categories" method="GET" class="mb-4">
      <div class="input-group">
        <input type="text" class="form-control" placeholder="Search by Category Name" name="name"
          value="<%= typeof req !== 'undefined' && req.query.name ? req.query.name : '' %>" />
        <button class="btn btn-outline-primary" type="submit">
          <i class="fas fa-search me-1"></i> Search
        </button>
        <% if (typeof searchPerformed !== 'undefined' && searchPerformed) { %>
          <a href="/ig_categories" class="btn btn-outline-secondary ms-2">Clear</a>
        <% } %>
      </div>
    </form>

    <!-- Category Table -->
    <% if (categories && categories.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-bordered align-middle text-center">
          <thead class="table-light">
            <tr>
              <th>ID</th>
              <th>Category Name</th>
              <th>Description</th>
              <th style="min-width: 200px;">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% categories.forEach((category) => { %>
              <tr>
                <td><%= category.id %></td>
                <td><%= category.name || category.category_name %></td>
                <td><%= category.description || '-' %></td>
                <td>
                  <div class="action-buttons">
                    <form action="/admin/updateIgCategory/edit/<%= category.id %>" method="POST" class="d-flex flex-wrap gap-2 align-items-center">
                      <input type="text" name="category_name" class="form-control form-control-sm w-auto" value="<%= category.name || category.category_name %>" required />
                      <button class="btn btn-sm btn-success" title="Update">
                        <i class="fas fa-check"></i>
                      </button>
                    </form>
                    <form action="/admin/manage-categories/delete/<%= category.id %>" method="POST" onsubmit="return confirm('Delete this category?')">
                      <button class="btn btn-sm btn-danger" title="Delete">
                        <i class="fas fa-trash-alt"></i>
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <p class="text-center text-muted">No IG categories found<%= typeof searchPerformed !== 'undefined' && searchPerformed ? ' matching your search criteria.' : '.' %></p>
    <% } %>
  </div>

  <!-- Admin Footer -->
  <%- include('../partials/Admin/admin-footer') %>
</body>
</html>
